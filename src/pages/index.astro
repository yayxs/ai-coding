---
import Layout from '../layouts/Layout.astro';
import AiToolsTable from '../components/AiToolsTable.astro';
import { aiTools } from '../data/aiTools';

const description = "AI编程工具对比 - 比较主流AI编程助手的功能、平台和定价";
const title = "AI编程工具对比 | AI Coding Tools Comparison";
---

<Layout title={title} description={description}>
  <main>
    <h1 class="title-zh">AI编程工具对比</h1>
    <h1 class="title-en">AI Coding Tools Comparison</h1>
    <AiToolsTable tools={aiTools} />
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--text-color);
  }

  .title-en {
    display: none;
  }

  :global([data-language="en"]) .title-zh {
    display: none;
  }

  :global([data-language="en"]) .title-en {
    display: block;
  }
</style>